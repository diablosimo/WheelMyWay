<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.accessibility.AccessibiliteFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="31.629055"
            mapbox:mapbox_cameraTargetLng="-8.055828"
            mapbox:mapbox_cameraZoom="12">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left|center_horizontal"

                android:layout_margin="16dp"
                android:layout_marginBottom="150dp"
                android:backgroundTint="#87CEEB"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_action_add"
                mapbox:backgroundTint="#87CEEB" />
        </com.mapbox.mapboxsdk.maps.MapView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>