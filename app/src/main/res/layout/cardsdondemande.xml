<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carde"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="#FFFFFF"
    android:elevation="20dp"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp">


    <TextView
        android:id="@+id/date"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:text="27/05/2020"
        android:textAlignment="textEnd"
        android:textColor="#525050" />

    <TextView
        android:id="@+id/titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"

        android:text="Titre"
        android:textColor="#00CA9D"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"


        android:text="this is just a blabla text te previez what "
        android:textColor="#525050" />

    <LinearLayout
        android:id="@+id/buttonsarea"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:elevation="12dp"
        android:orientation="horizontal"
        android:paddingLeft="160dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">


        <Button
            android:id="@+id/buttondelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_marginRight="10dp"
            android:background="@drawable/formbuttons"
            android:drawableTop="@drawable/outline_delete_white_18dp"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonmodify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_weight="1"
            android:background="@drawable/formbuttonsborder"
            android:drawableTop="@drawable/ic_menu_manage"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>
