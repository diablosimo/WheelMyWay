<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carde"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="#FFFFFF"
    android:elevation="12dp"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingTop="0dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/side_nav_bar" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"

                android:layout_marginBottom="8dp"
                android:paddingLeft="100dp"
                android:text="Nom Association"
                android:textColor="#00CA9D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"


                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:text="farah@gmail.com"
                android:textColor="#525050" />

            <TextView
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"


                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:text="acevue M6 n36 marrakech7"
                android:textColor="#525050" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"


                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"
                android:text="+212065971399"
                android:textColor="#525050" />

            <LinearLayout
                android:id="@+id/buttonsarea"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="#FFFFFF"
                android:elevation="12dp"
                android:orientation="horizontal"
                android:paddingLeft="80dp"
                android:paddingTop="5dp"
                android:paddingRight="80dp"
                android:paddingBottom="0dp">

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:elevation="20dp"
                    android:src="@drawable/ic_action_phone_outgoing" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
